{
    "name": "botfactoryit/flarum-amazon-affiliation",
    "description": "Flarum extension that adds the tag parameter to Amazon product links",
    "version": "v1.0.0",
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
      {
        "name": "Matteo Contrini",
        "email": "m.contrini@gmail.com"
      }
    ],
    "require": {
        "flarum/core": "^0.1.0-beta.7"
    },
    "extra": {
        "flarum-extension": {
            "title": "Amazon Affiliation",
            "icon": {
                "name": "money",
                "backgroundColor": "#FB9919",
                "color": "#ffffff"
            }
        }
    },
    "autoload": {
        "psr-4": {
            "BotFactory\\AmazonAffiliation\\": "src/"
        }
    }
}
